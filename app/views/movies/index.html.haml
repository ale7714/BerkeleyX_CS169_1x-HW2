-#  This file is app/views/movies/index.html.haml

%h1 All Movies
= form_tag({},{:id => "ratings_form", :method => :get}) do 
  Include:  
  -if @hilite
    = hidden_field :order, "#{@hilite}"
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]"
  = submit_tag('Refresh', :id => "ratings_submit")

%table#movies
  %thead
    %tr
      - if @hilite == "title"
        %th.hilite#title_header= link_to "Movie Title", movies_path(order: "title")
      - else
        %th#title_header= link_to "Movie Title", movies_path(order: "title")
      %th Rating
      - if @hilite == "release_date"
        %th.hilite#release_date_header= link_to "Release Date", movies_path(order: "release_date")
      - else
        %th#release_date_header= link_to "Release Date", movies_path(order: "release_date")
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
